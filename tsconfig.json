{
	"compilerOptions": {
		"lib": ["esnext"],
		"module": "preserve",
		"moduleResolution": "bundler",
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext",
		"verbatimModuleSyntax": true,
		"paths": {
			"@src/*": ["./src/*"],
			"@data/*": ["./tests/fixtures/*"]
		}
	}
}
